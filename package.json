{
  "name": "react-base-table",
  "version": "1.8.0",
  "description": "a react table component to display large data set with high performance and flexibility",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "lib/",
    "es/",
    "styles.css"
  ],
  "author": "Neo Nie <nihgwu@live.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Autodesk/react-base-table.git"
  },
  "scripts": {
    "start": "cd website && npm start",
    "deploy": "cd website && npm run deploy",
    "lint": "eslint ./src/**/*.js",
    "clean": "rimraf lib es styles.css",
    "build:js": "cross-env NODE_ENV=production babel src -d lib --ignore '**/*.spec.js','__snapshots__' --copy-files --source-maps",
    "build:es": "cross-env BABEL_ENV=es NODE_ENV=production babel src -d es --ignore '**/*.spec.js','__snapshots__' --copy-files --source-maps",
    "build:css": "node-sass src/_BaseTable.scss ./styles.css --output-style expanded",
    "build": "npm run build:js && npm run build:es && npm run build:css",
    "format": "prettier --write 'src/**/*.{js,scss}'",
    "prebuild": "npm run clean",
    "precommit": "lint-staged",
    "prepush": "npm run test",
    "prepublish": "npm run build && npm run test",
    "test": "jest"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0",
    "classnames": "^2.2.5",
    "memoize-one": "^5.0.0",
    "prop-types": "^15.7.2",
    "react-virtualized-auto-sizer": "^1.0.2",
    "react-window": "^1.8.2"
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/helper-module-imports": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/classnames": "^2.2.9",
    "@types/jest": "^24.0.18",
    "@types/prop-types": "^15.7.2",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/react-test-renderer": "^16.9.0",
    "@types/react-virtualized-auto-sizer": "^1.0.0",
    "@types/react-window": "^1.8.1",
    "@types/rollup-plugin-json": "^3.0.2",
    "@types/rollup-plugin-sourcemaps": "^0.4.2",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^23.4.2",
    "babel-plugin-annotate-pure-calls": "^0.4.0",
    "babel-plugin-dev-expression": "^0.2.2",
    "babel-plugin-syntax-trailing-function-commas": "^6.22.0",
    "babel-plugin-transform-async-to-promises": "^0.8.14",
    "babel-plugin-transform-rename-import": "^2.3.0",
    "cross-env": "^5.2.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-react-app": "^5.0.1",
    "eslint-plugin-flowtype": "^4.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^0.14.3",
    "jest": "^24.9.0",
    "jest-environment-jsdom": "^24.9.0",
    "jest-watch-typeahead": "^0.4.0",
    "lint-staged": "^7.2.2",
    "node-sass": "^4.9.3",
    "prettier": "^1.18.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-test-renderer": "^16.4.2",
    "rimraf": "^2.6.2",
    "rollup": "^1.20.3",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-size-snapshot": "^0.10.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^5.1.1",
    "rollup-plugin-typescript2": "^0.24.0",
    "ts-jest": "^24.0.2",
    "tslib": "^1.10.0",
    "typescript": "^3.6.2"
  },
  "lint-staged": {
    "packages/**/*.scss": [
      "prettier --write",
      "git add"
    ],
    "packages/**/*.js": [
      "prettier --write",
      "eslint -c .eslintrc",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "packageJson": "package.json"
      }
    },
    "roots": [
      "<rootDir>/src"
    ]
  }
}
